# =============================================================================
# Auros Configuration
# =============================================================================
# Copy this file to .env and customize as needed.
# All settings have sensible defaults - only override what you need.

# -----------------------------------------------------------------------------
# Ollama (Local LLM)
# -----------------------------------------------------------------------------
# Base URL for Ollama server
OLLAMA_BASE_URL=http://localhost:11434

# Model to use for job analysis (must be pulled in Ollama first)
OLLAMA_MODEL=qwen2.5-coder:7b

# Auto-start Ollama if not running
OLLAMA_AUTO_START=true

# Command used to start Ollama (customize if you want a new terminal)
OLLAMA_START_COMMAND=ollama serve
# macOS example to launch in a new Terminal window:
# OLLAMA_START_COMMAND=osascript -e 'tell application "Terminal" to do script "ollama serve"'

# How long to wait for Ollama to become healthy after start (seconds)
OLLAMA_START_TIMEOUT=8

# -----------------------------------------------------------------------------
# Slack Notifications
# -----------------------------------------------------------------------------
# Webhook URL for Slack notifications (leave empty to disable)
SLACK_WEBHOOK_URL=

# Minimum match score (0.0-1.0) to trigger Slack notification
SLACK_MIN_SCORE=0.70

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# SQLite database URL (async driver)
DATABASE_URL=sqlite+aiosqlite:///./data/auros.db

# -----------------------------------------------------------------------------
# Scheduler (Automatic Job Scans)
# -----------------------------------------------------------------------------
# Hours of day to run automatic scans (comma-separated, 24-hour format)
SCAN_SCHEDULE_HOURS=6,12,18

# Timezone for scheduler (IANA timezone name)
SCAN_TIMEZONE=America/Chicago

# Set to true to disable automatic scheduled scans
DISABLE_SCHEDULER=false

# -----------------------------------------------------------------------------
# Scraping Rate Limits
# -----------------------------------------------------------------------------
# Minimum delay between page requests (seconds)
SCRAPE_DELAY_MIN=5

# Maximum delay between page requests (seconds)
SCRAPE_DELAY_MAX=10

# Maximum number of pages to scrape concurrently
MAX_CONCURRENT_PAGES=3

# -----------------------------------------------------------------------------
# Job Preferences
# -----------------------------------------------------------------------------
# Preferred work mode: any | remote | hybrid | onsite
PREFERRED_WORK_MODE=any

# Minimum confidence (0.0-1.0) for salary extraction to be included
MIN_SALARY_CONFIDENCE=0.60

# -----------------------------------------------------------------------------
# ATS Domains
# -----------------------------------------------------------------------------
# Allowed ATS domains for job board scraping (comma-separated)
# Only URLs from these domains will be processed
ATS_ALLOWED_DOMAINS=greenhouse.io,boards.greenhouse.io,boards-api.greenhouse.io,lever.co,jobs.lever.co,api.lever.co,myworkdayjobs.com,workdayjobs.com,ashbyhq.com,rippling.com,jobs.jobvite.com,smartrecruiters.com

# -----------------------------------------------------------------------------
# API Server
# -----------------------------------------------------------------------------
# Host and port for the FastAPI server
API_HOST=0.0.0.0
API_PORT=8008

# API key for authentication (leave empty to disable auth)
API_KEY=

# Rate limit: maximum requests per minute per client
API_RATE_LIMIT_PER_MINUTE=60

# -----------------------------------------------------------------------------
# CORS (Cross-Origin Resource Sharing)
# -----------------------------------------------------------------------------
# Allowed origins for CORS (comma-separated)
# Add your frontend URL here if different from defaults
CORS_ORIGINS=http://localhost:5173,http://localhost:4001
